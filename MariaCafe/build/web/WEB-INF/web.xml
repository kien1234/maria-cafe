<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>InformationControl</servlet-name>
        <servlet-class>controler.InformationControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductDetailControl</servlet-name>
        <servlet-class>controler.ProductDetailControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeControl</servlet-name>
        <servlet-class>controler.HomeControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AboutControl</servlet-name>
        <servlet-class>controler.AboutControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IntroductionControl</servlet-name>
        <servlet-class>controler.IntroductionControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InformationControl</servlet-name>
        <url-pattern>/InformationControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductDetailControl</servlet-name>
        <url-pattern>/ProductDetailControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeControl</servlet-name>
        <url-pattern>/HomeControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AboutControl</servlet-name>
        <url-pattern>/AboutControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IntroductionControl</servlet-name>
        <url-pattern>/IntroductionControl</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
